# My aliases
alias python=python3
alias venv='source ~/.venv/bin/activate'

# Editor aliases
alias vi=nvim
alias vim=nvim

alias lg=lazygit

alias repos='cd ~/repos'
alias tm='~/.local/bin/tm'

# Modern CLI tool alternatives (install these for better experience)
# Check if modern tools exist and alias to them
if command -v exa >/dev/null 2>&1; then
    alias ls='exa --color=auto --icons'
    alias ll='exa -la --color=auto --icons'
    alias la='exa -a --color=auto --icons'
    alias lt='exa --tree --level=2 --color=auto --icons'
fi

if command -v bat >/dev/null 2>&1; then
    alias cat='bat --paging=never --style=plain'
    alias less='bat --paging=always'
fi

if command -v fd >/dev/null 2>&1; then
    alias find='fd'
fi

if command -v rg >/dev/null 2>&1; then
    alias grep='rg'
fi

if command -v dust >/dev/null 2>&1; then
    alias du='dust'
fi

if command -v procs >/dev/null 2>&1; then
    alias ps='procs'
fi

if command -v htop >/dev/null 2>&1; then
    alias top='htop'
fi

if command -v delta >/dev/null 2>&1; then
    alias diff='delta'
fi

# System monitoring
alias ports='netstat -tulanp'
alias meminfo='free -m -l -t'
alias cpuinfo='lscpu'
alias diskinfo='df -h'

# Docker aliases (if docker is installed)
if command -v docker >/dev/null 2>&1; then
    alias d='docker'
    alias dc='docker-compose'
    alias dps='docker ps'
    alias dimg='docker images'
    alias dexec='docker exec -it'
    alias dlogs='docker logs'
fi

# Node.js/npm aliases
alias ni='npm install'
alias nid='npm install --save-dev'
alias nig='npm install -g'
alias nrun='npm run'
alias nstart='npm start'
alias ntest='npm test'
