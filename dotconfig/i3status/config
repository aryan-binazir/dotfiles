general {
        colors = true
        interval = 1
        output_format = "i3bar"
}

order += "cpu_usage"
order += "memory"
order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM: %used/%total"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        low_threshold = 30
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
